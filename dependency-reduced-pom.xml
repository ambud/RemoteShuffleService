    <profile>
      <id>server</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>${shade.version}</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>META-INF/versions/11/org/roaringbitmap/*</exclude>
                    <exclude>META-INF/versions/11/org/glassfish/*</exclude>
                  </excludes>
                </filter>
              </filters>
              <relocations>
                <relocation>
                  <pattern>com.uber.m3.thrift.generated</pattern>
                  <shadedPattern>com.uber.m3.thrift.gen</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <projectArtifactId>remote-shuffle-service-server</projectArtifactId>
        <dependency.scope>compile</dependency.scope>
      </properties>
    </profile>
    <profile>
      <id>stresstest</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${test.runner.version}</version>
            <configuration>
              <property>
                <name>usedefaultlisteners</name>
                <value>false</value>
              </property>
              <property>
                <name>listener</name>
                <value>org.apache.spark.shuffle.LogListener</value>
              </property>
              <trimStackTrace>false</trimStackTrace>
              <enableAssertions>true</enableAssertions>
              <excludes>
                <exclude>none</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
